<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/root_business_detail"
                tools:context="com.example.lmohamed.recyclerview.view.PersonDetailActivity">

    <View
        android:id="@+id/detail_business_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"
        />

    <View
        android:id="@+id/div_center"
        style="@style/Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"

        />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/detail_business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_business_address"
        android:layout_below="@+id/div_center"
        android:padding="16dp"

        tools:text="Moe's Tavern"
        />

    <TextView
        android:id="@+id/detail_business_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_center"
        android:padding="16dp"

        tools:text="1234 Main St. Springfield"
        />

    <TextView
        android:id="@+id/detail_business_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_business_address"
        android:padding="16dp"

        tools:text="555-555-5555"
        />


</RelativeLayout>
