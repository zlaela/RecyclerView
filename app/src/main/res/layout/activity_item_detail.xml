<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <View
        android:id="@+id/detail_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"
        />

    <View
        android:id="@+id/div_center"
        style="@style/Text.Primary"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"

        />

    <TextView
        style="@style/Text.Primary"
        android:id="@+id/detail_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_center"
        android:paddingTop="@dimen/narrow"
        android:paddingBottom="@dimen/narrow"
        android:paddingLeft="@dimen/medium"
        android:paddingRight="@dimen/medium"

        tools:text="Moe's Tavern"
        />

    <TextView
        android:id="@+id/detail_item_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_item_name"
        android:paddingTop="@dimen/narrow"
        android:paddingBottom="@dimen/narrow"
        android:paddingLeft="@dimen/medium"
        android:paddingRight="@dimen/medium"


        tools:text="1234 Main St. Springfield"
        />
    <TextView
        android:id="@+id/detail_item_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_item_address"
        android:paddingTop="@dimen/narrow"
        android:paddingBottom="@dimen/narrow"
        android:paddingLeft="@dimen/medium"
        android:paddingRight="@dimen/medium"

        tools:text="555-555-5555"
        />
    <TextView
        android:id="@+id/detail_item_latlong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_item_email"
        android:layout_below="@+id/detail_item_phone"
        android:paddingTop="@dimen/narrow"
        android:paddingBottom="@dimen/narrow"
        android:paddingLeft="@dimen/medium"
        android:paddingRight="@dimen/medium"

        tools:text="0.00000 - 0.00000"
        />

    <TextView
        android:id="@+id/detail_item_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/narrow"

        android:visibility="gone"
        tools:text="Agamemnon@kingofkings.royal"
        />


    </RelativeLayout>
</merge>